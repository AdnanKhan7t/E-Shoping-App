        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="60dp"

        app:finalNumber="1000"
        app:initialNumber="100"
        app:textSize="16dp">

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
