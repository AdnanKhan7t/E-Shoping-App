<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bigback"
    tools:context=".RegisterActivity">


    <ImageView
        android:id="@+id/register_applogo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/m_e_logo" />

    <EditText
        android:id="@+id/register_username_input"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_phone_number_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/input_design"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:hint="Name"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="19sp" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:layout_above="@+id/otp_text"
        android:layout_below="@+id/register_username_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/input_design"
        android:gravity="center"
        tools:ignore="MissingClass" />

    <EditText
        android:id="@+id/register_phone_number_input"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_password_input"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="177dp"
        android:background="@drawable/input_design"
        android:drawableStart="@drawable/ic_baseline_phone_24"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/otp_text"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="206dp"
        android:background="@drawable/input_design"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:hint="Enter OTP here"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="117dp"
        android:background="@drawable/input_design"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="19sp" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="265dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="361dp"
        android:layout_height="52dp"
        android:layout_above="@+id/register_username_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="CREATE NEW ACCOUNT"
        android:textColor="#f95611"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/otp_btn"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/otp_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="123dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/buttons"
        android:text="Get OTP"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/otp_verify"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_password_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="256dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/buttons"
        android:text="Verify OTP" />

</RelativeLayout>
